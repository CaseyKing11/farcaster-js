{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/__tests__"
  ],
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true
  }
}
