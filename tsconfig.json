{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true
  }
}
